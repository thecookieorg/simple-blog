<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% unless current_user.blank? %>
  <% if @post.user.id == current_user.id %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <% else %>
    <%= link_to 'Back', posts_path %>
  <% end %>
<% else %>
  <%= link_to 'Back', posts_path %>
<% end %>